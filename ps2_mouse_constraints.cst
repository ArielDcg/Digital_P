// ps2_mouse_constraints.cst
// Restricciones para Tang Primer 25K

// Clock del sistema (27 MHz)
IO_LOC "clk" H11;
IO_PORT "clk" PULL_MODE=UP;

// Reset button (KEY1)
IO_LOC "rst_n" H10;
IO_PORT "rst_n" PULL_MODE=UP;

// Conexiones PS/2 - Usar pines PMOD disponibles
// PMOD1 conectores para PS/2
IO_LOC "ps2_clk" B10;   // PMOD1_1
IO_PORT "ps2_clk" PULL_MODE=UP DRIVE=8 OPEN_DRAIN=ON;

IO_LOC "ps2_data" A11;  // PMOD1_2
IO_PORT "ps2_data" PULL_MODE=UP DRIVE=8 OPEN_DRAIN=ON;

// Señales de debug para analizador lógico
// Usar PMOD2 para conectar el analizador
IO_LOC "debug_state[0]" E10;  // PMOD2_1
IO_LOC "debug_state[1]" D10;  // PMOD2_2
IO_LOC "debug_state[2]" D11;  // PMOD2_3
IO_LOC "debug_state[3]" D12;  // PMOD2_4
IO_LOC "debug_state[4]" E12;  // PMOD2_5
IO_LOC "debug_state[5]" E13;  // PMOD2_6
IO_LOC "debug_state[6]" F13;  // PMOD2_7
IO_LOC "debug_state[7]" F12;  // PMOD2_8

// LEDs para indicadores visuales
IO_LOC "init_done" L14;       // LED1
IO_LOC "rx_data_valid" L13;   // LED2
IO_LOC "debug_busy" N16;      // LED3
IO_LOC "debug_ack" N15;       // LED4